{
    "name": "dispatcher",
    "version": "0.4.5",
    "description": "Super basic event dispatcher for objects",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc --skipLibCheck",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "eslint src --ext=ts",
        "lint:fix": "npm run lint -- --fix",
        "postversion": "git push && git push --tags",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "prettier": "prettier -c src/**/*.ts",
        "prettier:fix": "npm run prettier -- --write",
        "test": "ts-mocha -p tsconfig.testing.json test/**/*.spec.ts",
        "version": "npm run format && git add -A src"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mattkenefick/dispatcher.git"
    },
    "files": [
        "dist/**/*"
    ],
    "author": "Polymer Mallard LLC",
    "license": "ISC",
    "dependencies": {
        "@types/node": "^14.0.6"
    },
    "devDependencies": {
        "@types/chai": "^4.2.11",
        "@types/mocha": "^7.0.2",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "chai": "^4.2.0",
        "eslint": "^7.25.0",
        "mocha": "^10.2.0",
        "prettier": "^2.2.1",
        "ts-node": "^8.10.1",
        "tslib": "^2.2.0",
        "typescript": "^3.8.3"
    }
}
