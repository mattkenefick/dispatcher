{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outputDir": "./dist",
        "baseUrl": ".",
        "types": [
            "webpack-env"
        ],
        "paths": {
            "*": ["types/*"],
            "@/*": [
                "resources/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/*"
    ]
}